[REPORTS]

reports=no
output-format=colorized

[BASIC]

# Sorry not sorry.
indent-string='  '

# One-letter variables are pretty useful in formulas.
variable-rgx=[a-z_][a-z0-9_]{0,35}$
variable-name-hint=[a-z_][a-z0-9_]{0,35}$
function-rgx=[a-z_][a-z0-9_]{0,35}$
function-name-hint=[a-z_][a-z0-9_]{0,35}$
argument-rgx=[a-z_][a-z0-9_]{0,35}$
argument-name-hint=[a-z_][a-z0-9_]{0,35}$

[DESIGN]

# Loosen these restrictions.
max-args=10
max-locals=20
max-statements=70
max-attributes=10
min-public-methods=0

[MISCELLANEOUS]

# TODOs should be allowed.
notes=
